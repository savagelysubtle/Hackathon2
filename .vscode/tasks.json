{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dashboard Dev Server",
      "type": "shell",
      "command": "bun",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/dashboard"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(Local:|ready)"
        }
      },
      "runOptions": {
        "runOn": "default"
      }
    },
    {
      "label": "Stop Dashboard Dev Server (Port 3000)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "$port = Get-NetTCPConnection -LocalPort 3000 -ErrorAction SilentlyContinue | Select-Object -ExpandProperty OwningProcess; if ($port) { Stop-Process -Id $port -Force; Write-Host 'Stopped process on port 3000' } else { Write-Host 'No process running on port 3000' }"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Restart Dashboard Dev Server",
      "dependsOn": ["Stop Dashboard Dev Server (Port 3000)", "Start Dashboard Dev Server"],
      "dependsOrder": "sequence",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}
